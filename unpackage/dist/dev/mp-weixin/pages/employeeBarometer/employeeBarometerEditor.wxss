page {
	height: 100% !important;
	background: #f4f4f4;
}
.editorContent {
  width: 705rpx;
  background: #FBFDFF;
  border-radius: 30rpx;
  margin: 21rpx auto auto auto;
}
.editorContent view {
  height: 107rpx;
  line-height: 107rpx;
}
.editorContent view text {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 300;
}
.editorContent view .editorNameOne {
  color: #2D2D2D;
  margin-left: 46rpx;
}
.editorContent view .editorNameTwo {
  color: #797979;
  margin-left: 16rpx;
}
.editorContent .editorName {
  border-bottom: 2rpx solid rgba(207, 207, 207, 0.22);
}
.editorReply {
  width: 705rpx;
  background: #FBFDFF;
  border-radius: 30rpx;
  margin: 6rpx auto 60rpx auto;
  overflow: hidden;
}
.editorReply .reply_content {
  margin: 26rpx auto auto 51rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #474747;
}
.editorReply .textarea {
  width: 616rpx;
  height: 190rpx;
  background: #F1F1F1;
  margin: 35rpx auto;
  padding: 24rpx 32rpx;
}
.editorReply .textarea textarea {
  width: 97%;
  height: 97%;
}
.editorReply .common_submit {
  margin: 40rpx auto 40rpx 114rpx;
}

