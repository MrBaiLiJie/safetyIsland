.gc_close {
  background-color: #ffffff;
  overflow: hidden;
}
.gc_close .close_time {
  width: 207rpx;
  height: 50rpx;
  border: 2rpx solid #838383;
  overflow: hidden;
  -webkit-border-radius: 25rpx;
          border-radius: 25rpx;
  background: #EBEBEB;
  float: left;
  margin: 44rpx auto auto 41rpx;
}
.gc_close .close_time text {
  font-size: 23rpx;
  font-family: PingFang SC;
  font-weight: 300;
  color: #949494;
  float: left;
  margin: 12rpx auto 13rpx 23rpx;
}
.gc_close .close_time image {
  width: 14rpx;
  height: 10rpx;
  float: right;
  margin: 20rpx 13rpx auto auto;
}
.gc_close .close_type {
  width: 166rpx;
  height: 50rpx;
  border: 2rpx solid #838383;
  overflow: hidden;
  -webkit-border-radius: 25rpx;
          border-radius: 25rpx;
  background: #EBEBEB;
  float: right;
  margin: 44rpx 33rpx 13rpx auto;
}
.gc_close .close_type text {
  font-size: 23rpx;
  font-family: PingFang SC;
  font-weight: 300;
  color: #949494;
  float: left;
  margin: 12rpx auto auto 33rpx;
}
.gc_close .close_type image {
  width: 14rpx;
  height: 10rpx;
  float: right;
  margin: 20rpx 25rpx auto auto;
}
