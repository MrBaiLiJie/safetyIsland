page {
  height: 100%;
}
.wrap {
  position: relative;
  height: 100%;
}
.wrap .cover-pdf {
  padding: 12rpx 50rpx;
}
.wrap .cover-img .video-width {
  width: 100%;
}
.wrap .cover-content {
  padding: 10rpx 50rpx 46rpx 50rpx;
}
.wrap .cover-content .title {
  padding: 10rpx 0;
  color: #000000;
  font-size: 36rpx;
}
.wrap .cover-content .content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.wrap .cover-content .content .type {
  color: #8C8C8C;
  font-size: 30rpx;
}
.wrap .cover-content .content .time {
  margin-left: auto;
  color: #8C8C8C;
  font-size: 24rpx;
}
.wrap .line {
  width: 100%;
  height: 15rpx;
  background-color: #F3F3F3;
}
.wrap .infor-wrap {
  padding: 32rpx 36rpx;
}
.wrap .infor-wrap .title {
  padding-left: 16rpx;
  color: #010101;
  font-size: 36rpx;
  vertical-align: middle;
}
.wrap .infor-wrap .title .label {
  margin-right: 12rpx;
  display: inline-block;
  vertical-align: middle;
  width: 8rpx;
  height: 30rpx;
  background-color: #399AF6;
}
.wrap .infor-wrap .text {
  padding-top: 50rpx;
  color: #8C8C8C;
  font-size: 30rpx;
  text-indent: 2em;
}
.wrap .btn-wrap {
  padding: 0 50rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.wrap .btn-wrap .btn {
  width: 252rpx;
  height: 117rpx;
}
.wrap .btn-wrap .btn image {
  width: 100%;
  height: 100%;
}

