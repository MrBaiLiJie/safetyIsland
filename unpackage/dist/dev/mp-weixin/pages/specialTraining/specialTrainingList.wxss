page {
  height: 100% !important;
}
.view {
  height: 100%;
}
.ct_tab {
  width: 698rpx;
  height: 150rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 300;
  color: #555555;
}
.ct_tab .ct_item {
  width: 129rpx;
  display: block;
  margin-top: 67rpx;
}
.ct_tab swiper {
  width: 100%;
}
.ct_tab swiper-item {
  width: 150rpx !important;
}
.ct_item:nth-child(1) {
  margin-left: 41rpx;
}
.ct_item:nth-child(n+2) {
  padding-left: 47rpx;
}
.ct_active {
  color: #007AFF;
}
.ct_active text {
  color: #399AF6;
  font-size: 33rpx;
  position: relative;
}
.ct_active text:after {
  position: absolute;
  content: '';
  width: 47rpx;
  height: 5rpx;
  left: 0;
  right: 0;
  bottom: -13rpx;
  margin: auto;
  background: #399AF6;
}
.tabContent {
  height: 100%;
  background: #f4f4f4;
}
.tabContent .tabContentList {
  width: 686rpx;
  height: 307rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  float: left;
  margin: 21rpx 32rpx 21rpx 32rpx;
}
.tabContent .tabContentList .leftImg {
  height: 238rpx;
  width: 279rpx;
  float: left;
  margin: 39rpx auto 30rpx 40rpx;
}
.tabContent .tabContentList .leftImg image {
  width: 100%;
  height: 100%;
}
.tabContent .tabContentList .rightText {
  width: 279rpx;
  float: left;
  margin: 45rpx auto 30rpx 40rpx;
}
.tabContent .tabContentList .rightText .title {
  width: 100%;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 300;
  color: #090909;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.tabContent .tabContentList .rightText .text {
  width: 100%;
  margin-top: 24rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 300;
  color: #9A9A9A;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}

